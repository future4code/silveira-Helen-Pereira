import React from 'react';
import styled from 'styled-components';

const div = styled.div`
    display: flex;
    width: 25vw;
    margin: 10px 0 10px 40px;
    justify-content: space-between;
    align-items: center;    
`
const  Botoes = styled.div`
    background-color: white;
    display: flex;
    width: 50vw;
    height: 8vh;
    margin: 10px 0 10px 40px;
    justify-content: center;
    align-items: center;    
`



const CardPlaylist = (props) => {
        return(
                <div key={props.playlistId}>
                            <Botoes>
                                <h2>{props.name}</h2>
                                <button onClick={() => {props.mudarPagina("tracklistDaPlaylist", props.playlistId)}}>Ver</button>
                                <button onClick={() => {props.deletarPlaylist(props.playlistId)}}>Deletar playlist</button>                                         
                            </Botoes>
                    
                </div>
        )
    }
export default CardPlaylist



